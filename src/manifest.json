{   
    "name": "Solver For 2048",   
    "version": "1.0",
    "manifest_version": 2,
    "description": "Solve 2048",

    "permissions": [
        "tabs"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {     
        "default_popup": "popup.html"   
    },

    "content_scripts": [
        {
            "matches": ["http://*/*"],
            "js": ["jquery.js", "content.js"]
        }
    ]
}
